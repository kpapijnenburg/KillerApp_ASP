<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Musicr</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/scripts.js"></script>
</head>
<body onload="Refresh();" style="padding: 0">
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <div id="admin">
                <a class="navbar-brand" href="/Home/Index">Musicr</a>
            </div>
            <div id="loggedIn">
                @Html.ActionLink("Checkout", "CheckoutView", "ShoppingCart", null, new { @class = "btn btn-secondary" })
            </div>
        </div>

    </nav>
    <!-- Page Content -->
    <div class="container columnBg">
        <!--1020x160 foto header -->
        <div class="columnBg">
            <img class="card-img-top img-fluid" src="http://spotlight.content.hardstyle.com/spotlight_banners/1238_978x278.jpg" alt="">
            <hr />
        </div>
        <div class="row">
            <!--Linker content kolom row 1 -->
            <div class="col-lg-3 columnBg">
                <h3 class="text-center">Latest releases</h3>
                <hr />
                <ul class="list-group-flush" id="Latest"></ul>
                <div align="center">
                    @Html.ActionLink("Buy Latest Releases", "AddLatestReleases", "ShoppingCart", null, new { @class = "btn btn-primary center" })
                </div>
                <hr />
            </div>
            <!-- middel content kolom row 1 -->
            <div class="container bodyBg body-content col-lg-6">
                @RenderBody()
            </div>
            <!-- rechter content kolom row 1-->
            <div class="col-lg-3 columnBg">
                <h3 class="text-center">Most Popular</h3>
                <hr />
                <ul class="list-group-flush" id="Most">
                </ul>
                <div align="center">
                    @Html.ActionLink("Buy Most Popular", "AddMostDownloaded", "ShoppingCart", null, new { @class = "btn btn-primary center" })
                </div>
                <hr />
            </div>
        </div>
        <div class="row">
            <!--linker content kolom row 2 -->
            <div id="recommended" class="col-lg-3 columnBg">
             
            </div>
            <div class="col-lg-6 columnBg"></div>
            <div id="deal" class="col-lg-3 columnBg">

            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Musicr</p>
        </footer>
    </div>
</body>
@Scripts.Render("~/bundles/lib")
@RenderSection("scripts", required: false)
</html>


